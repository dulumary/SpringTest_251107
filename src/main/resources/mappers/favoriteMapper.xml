<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.marondal.springtest.ajax.repository.FavoriteRepository">

    <select id="selectFavoriteList"
    resultType="com.marondal.springtest.ajax.domain.Favorite">
        SELECT
            `id`
            , `name`
            , `url`
            , `created_at`
            , `updated_at`
        FROM
            `favorite`
        ORDER BY
            `id` DESC
        </select>

    <insert id="insertFavorite" parameterType="map">
        INSERT INTO
            `favorite`
        (
            `name`
            , `url`
        )
        VALUE
        (
            #{name}
            , #{url}
        )
    </insert>


    <select id="countFavoriteByUrl" parameterType="string"
    resultType="int">
        SELECT
            COUNT(*)
        FROM
            `favorite`
        WHERE
            `url` = #{url}
    </select>

    <delete id="deleteFavorite" parameterType="int">
        DELETE FROM
            `favorite`
        WHERE
            `id` = #{id}
    </delete>
</mapper>