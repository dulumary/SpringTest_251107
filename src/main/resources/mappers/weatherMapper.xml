<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.marondal.springtest.thymeleaf.repository.WeatherRepository">


    <select id="selectWeatherList"
    resultType="com.marondal.springtest.thymeleaf.domain.Weather">
        SELECT
            `id`
             , `weather`
             , `date`
             , `temperatures`
             , `precipitation`
             , `micro_dust`
             , `wind_speed`
             , `created_at`
             , `updated_at`
        FROM
            `weatherhistory`
    </select>

    <insert id="insertWeather" parameterType="map">
        INSERT INTO
            `weatherhistory`
        (
            `weather`
            , `date`
            , `temperatures`
            , `precipitation`
            , `micro_dust`
            , `wind_speed`
        )
        VALUE
        (
            #{weather}
            , #{date}
            , #{temperatures}
            , #{precipitation}
            , #{microDust}
            , #{windSpeed}
        )
    </insert>

    <insert id="insertWeatherByObject"
    parameterType="com.marondal.springtest.thymeleaf.domain.Weather">
        INSERT INTO
            `weatherhistory`
        (
              `weather`
            , `date`
            , `temperatures`
            , `precipitation`
            , `micro_dust`
            , `wind_speed`
        )
        VALUE
        (
            #{weather}
            , #{date}
            , #{temperatures}
            , #{precipitation}
            , #{microDust}
            , #{windSpeed}
        )
    </insert>
</mapper>