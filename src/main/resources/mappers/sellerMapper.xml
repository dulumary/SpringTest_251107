<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.marondal.springtest.mvc.repository.SellerRepository">
    <insert id="insertSeller" parameterType="map">
        INSERT INTO
            `seller`
        (
            `nickname`
            , `temperature`
            , `profile_image`
        )
        VALUE
        (
            #{nickname}
            , #{temperature}
            , #{profileImage}
        )
    </insert>

    <select id="selectLastSeller"
    resultType="com.marondal.springtest.mvc.domain.Seller">
        SELECT
            `id`
            , `nickname`
            , `temperature`
            , `profile_image`
            , `created_at`
            , `updated_at`
        FROM
            `seller`
        ORDER BY
            `id` DESC
        LIMIT 1
    </select>

    <select id="selectSeller" parameterType="int"
            resultType="com.marondal.springtest.mvc.domain.Seller">
        SELECT
            `id`
             , `nickname`
             , `temperature`
             , `profile_image`
             , `created_at`
             , `updated_at`
        FROM
            `seller`
        WHERE
            `id` = #{id}
    </select>
</mapper>